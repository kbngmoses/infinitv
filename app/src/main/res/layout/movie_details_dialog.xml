<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/detail_poster"
        android:layout_width="450px"
        android:layout_height="450dp"
        android:src="@drawable/movie_poster1"
        android:layout_alignParentLeft="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#0A3F3E"
        android:layout_toRightOf="@id/detail_poster"
        android:padding="25dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Big Dady"
            android:id="@+id/detail_header"
            android:singleLine="true"
            android:textSize="30dp"
            android:textColor="#fff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_header"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Drama"
            android:textSize="22dp"
            android:textColor="#fff"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:id="@+id/detail_small_header" />

        <TextView
            android:id="@+id/movie_details_view"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_details"
            android:textSize="20sp"
            android:textColor="#fff"
             />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watch Movie"
                android:onClick="true"
                android:id="@+id/play_btn" />
        </LinearLayout>

    </LinearLayout>

