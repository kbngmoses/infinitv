<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="280px"
        android:layout_height="280px"
        android:background="@drawable/button_focused">


        <ImageView
            android:id="@+id/movie_poster1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:src="@drawable/movie_poster1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/movie_poster1"
            android:layout_gravity="bottom"
            android:background="#3B3B3B"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/movie_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Big Dady"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff"
                    android:ellipsize="marquee"
                    android:maxLines="1"
                    android:singleLine="true"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="252px"
                android:layout_height="fill_parent"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/movie_main_character"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play Fetured Movie"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#777777" />

                <ImageView
                    android:id="@+id/movie_ic_1"
                    android:layout_width="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="21dp"
                    android:lines="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/movie_ic" />



            </RelativeLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>

